{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [   
        "next/core-web-vitals",
        "plugin:react/recommended",         
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "@babel/eslint-parser",
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "indent": ["error", 2]
    }
}
